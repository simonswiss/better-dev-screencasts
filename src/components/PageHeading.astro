---
type Props = {
  title: string
}
const { title } = Astro.props as Props
---

<header>
  <div class="mx-auto max-w-7xl px-4 pt-8 sm:px-6 md:pt-20 lg:px-8 2xl:max-w-8xl">
    <div class="max-w-3xl lg:max-w-4xl xl:max-w-5xl">
      <h1
        class="text-4xl font-bold mix-blend-multiply md:text-5xl lg:text-6xl lg:leading-[1.2] xl:text-7xl"
      >
        {title}
      </h1>
      <div class="mt-4 max-w-3xl text-xl text-slate-600 md:mt-8 md:text-2xl lg:text-3xl">
        <slot />
      </div>
    </div>
  </div>
</header>
